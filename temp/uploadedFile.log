'''
    Distributions
'''

import numpy as np
from matplotlib import pyplot as plt
from matplotlib.patches import Patch

# Seeding for reproducibility
S = 1000000

# sampling from each of the six distributions
rng = np.random.default_rng(seed=S)
beta_plot = 100 * rng.beta(a = 4, b = 20, size = S)
exponential_plot = 100 * rng.exponential(scale=0.1, size = S)
laplace_plot = 100 * rng.laplace(scale=0.5, loc=0, size = S)
gamma_plot = 100 * rng.gamma(scale=0.1, size = S, shape=2)
normal_plot = rng.normal(scale=3, loc=0, size = S)
poisson_plot = rng.poisson(lam=3, size=S)

# plotting histograms for each of the distributions
plt.subplot(3,2,1)
plt.hist(beta_plot, range = (-5,50), color = 'r', bins=55)
plt.title('Beta')

plt.subplot(3,2,2)
plt.hist(x=exponential_plot, bins=51, alpha=0.5, color='g', range=(-1,50))
plt.title('Exponential')

plt.subplot(3,2,3)
plt.hist(x=gamma_plot, bins=51, range=(-1,50), color='black',alpha=0.8, orientation='horizontal')
plt.title('Gamma')

plt.subplot(3,2,4)
plt.hist(x=laplace_plot, bins=51, range=(-1,50), color='orange')
plt.title('Laplace')

plt.subplot(3,2,5)
plt.hist(x=normal_plot, bins=21, range=(-10,11))
plt.title('Normal')

plt.subplot(3,2,6)
plt.hist(poisson_plot, 12, range=(-1,11))
plt.title('Poisson')

# adjust the sub-plots to fit the titles and labels
plt.tight_layout()
# plt.show()
# save the plot as plot.png
plt.savefig('plot.png')
